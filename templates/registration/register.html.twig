{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block header %}
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('Asset/css/login.css') }}">
{% endblock %}

{% block body %}
    <div class="container mt-5">
            <div class="col-md-6 text-center mx-auto">
                <h1 class="mb-3">Page d'inscription</h1>

                {{ form_start(registrationForm, {'attr': {'class': 'needs-validation'}}) }}
                
                <!-- Ajout des classes Bootstrap pour les champs de formulaire -->
                <div class="mb-3">
                    <label for="registrationForm_firstName">Nom</label>
                    {{ form_widget(registrationForm.firstName, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                </div>

                <div class="mb-3">
                    <label for="registrationForm_lastName">Pr√©nom</label>
                    {{ form_widget(registrationForm.lastName, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                </div>

                <div class="mb-3">
                    <label for="registrationForm_email">Email</label>
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                </div>

                <div class="mb-3">
                    <label for="registrationForm_password_first">Mot de passe</label>
                    {{ form_widget(registrationForm.password.first, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                </div>

                <div class="mb-3">
                    <label for="registrationForm_password_second">Confirmation de Mot de passe</label>
                    {{ form_widget(registrationForm.password.second, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                </div>


                <div class="text-center">
                    <button type="submit" class="btn btn-success">S'inscrire</button>
                </div>

                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
